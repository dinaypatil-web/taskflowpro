# Environment Configuration
NODE_ENV=development

# Database Configuration (SQLite for development, PostgreSQL for production)
DATABASE_URL="file:./dev.db"
# For production PostgreSQL:
# DATABASE_URL=postgresql://taskflow:taskflow_secure_password_2024@localhost:5432/taskflow_pro?schema=public
# POSTGRES_PASSWORD=taskflow_secure_password_2024

# Redis Configuration (optional for development)
REDIS_PASSWORD=redis_secure_password_2024
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# Application URLs
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3002/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:3002

# Email Configuration - Brevo (Free 300 emails/day)
# Sign up at https://www.brevo.com/ to get API key
BREVO_API_KEY=your-brevo-api-key
FROM_EMAIL=noreply@yourdomain.com

# Fallback SMTP Configuration
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-brevo-smtp-user
SMTP_PASS=your-brevo-smtp-password
SMTP_FROM=TaskFlow Pro <noreply@yourdomain.com>

# Fast2SMS Configuration (Free â‚¹50 credits + Free WhatsApp API)
# Sign up at https://www.fast2sms.com/ to get API key
FAST2SMS_API_KEY=your-fast2sms-api-key

# MSG91 Configuration (Backup SMS service)
# Sign up at https://msg91.com/ to get API key
MSG91_API_KEY=your-msg91-api-key
MSG91_SENDER_ID=TXTLCL

# Legacy Twilio Configuration (optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=+1234567890

# Production Configuration (uncomment for production)
# NODE_ENV=production
# FRONTEND_URL=https://yourdomain.com
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api/v1
# NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com