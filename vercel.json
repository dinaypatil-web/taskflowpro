{
  "version": 2,
  "name": "taskflow-pro",
  "buildCommand": "cd frontend && npm ci && npm run build",
  "outputDirectory": "public",
  "installCommand": "cd frontend && npm ci",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": "../public"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}